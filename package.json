{
  "name": "@greenlit/cli",
  "version": "0.1.0",
  "description": "Automated CI failure triage agent - turns red builds green with evidence",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "greenlit": "dist/index.js"
  },
  "scripts": {
